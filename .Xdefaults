!------------------!
!     Cursor       !
!------------------!

!Xcursor.theme: whiteglass
!Xcursor.size: 16

!------------------!
!       XFT        !
!------------------!
Xft*dpi: 99
Xft*antialias: true
Xft*hinting: true
Xft*hintstyle: hintfull
Xft*rgba: rgb

!------------------!
!   URvxt Stuff    !
!------------------!

!urxvt*transparent: true
!urxvt*shading: 60

!--[term name]--!
!URxvt*termName: rxvt-unicode-256color
URxvt*termName: rxvt-256color
!--[trans and fg/bg]--!
!URxvt*fadeColor: black
!URxvt*transparent: false
!URxvt*shading: 80
!URxvt*depth:24
URxvt*background: #1B1C1B
URxvt*foreground: #FFFFFF
urxvt.internalBorder: 1
urxvt.externalBorder: 1
URxvt*borderless: 1

!--[font]--! 
!URxvt*font: -*-terminus-*-*-*-*-12-*-*-*-*-*-*-u
!URxvt*font: xft:Dejavu Sans Mono:size=9
!URxvt*font: xft:monofur:size=8
!urxvt.font:             xft:terminus:antialias=false:pixelsize=12
urxvt.font:   	xft:monofur:antialias=True:pixelsize=13
!URxvt.font:     xft:bitstream vera sans mono:size=8:antialias=ture

!--[scrolling]--! 
URxvt*scrollBar: false
URxvt*saveLines: 10000

!--[perl]--! 
URxvt*perl-ext-common: default

!--[bell]--!
URxvt*urgentOnBell: true

!--[cursor]--!
URxvt*cursorBlink: true
!--[Colours]--! 
URxvt*cursorColor: #FFAF00

! black
 URxvt*color0  : #2E3436
 URxvt*color8  : #555753
! ! red
 URxvt*color1  : #CC0000
 URxvt*color9  : #EF2929
! ! green
 URxvt*color2  : #4E9A06
 URxvt*color10 : #8AE234
! ! yellow
 URxvt*color3  : #C4A000
 URxvt*color11 : #FCE94F
! ! blue
 URxvt*color4  : #3465A4
 URxvt*color12 : #729FCF
! ! magenta
 URxvt*color5  : #75507B
 URxvt*color13 : #AD7FA8
! ! cyan
 URxvt*color6  : #06989A
 URxvt*color14 : #34E2E2
! ! white
 URxvt*color7  : #D3D7CF
 URxvt*color15 : #EEEEEC

URxvt.perl-ext:      default,url-select
URxvt.keysym.M-u:    perl:url-select:select_next
URxvt.url-select.launcher:   /usr/bin/chromium 
URxvt.url-select.underline: true
